# ============================================
# Admin Application Environment Variables
# ============================================
# Copy to .env.admin and customize

# Infographics Admin Configuration
INFOGRAPHICS_ADMIN_HOST=0.0.0.0
INFOGRAPHICS_ADMIN_PORT=7870
INFOGRAPHICS_ADMIN_USER=admin
INFOGRAPHICS_ADMIN_PASS=changeme
INFOGRAPHICS_ADMIN_SHARE=false

# OpenAI / GitHub Copilot (for AI assistance features)
GITHUB_COPILOT_TOKEN=your_github_copilot_token_here
OPENAI_API_KEY=your_openai_api_key_here
AGENT_MODEL=gpt-4o-mini

# Git Configuration (for auto-commit feature)
INFOGRAPHICS_GIT_AUTO_COMMIT=false
INFOGRAPHICS_GIT_AUTO_PUSH=false
INFOGRAPHICS_GIT_COMMIT_PREFIX=[Infographics]

# Logging Configuration
LOG_CONSOLE_LEVEL=INFO
LOG_FILE_LEVEL=DEBUG
LOG_FILE=/app/logs/admin.log
