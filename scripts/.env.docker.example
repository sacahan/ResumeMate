# ============================================
# Main Application Environment Variables
# ============================================
# Copy to .env.main and customize

# GitHub Copilot Token
# GITHUB_COPILOT_TOKEN=your_github_copilot_token_here

# OPENAI_API_KEY (log trace)
OPENAI_API_KEY=your_openai_api_key_here

# LiteLLM Proxy
LITELLM_PROXY_API_BASE=your-litellm-proxy-api-base
LITELLM_PROXY_API_KEY=your-litellm-proxy-api-key
LITELLM_PROXY_MODEL=gpt-5-mini

# LLM 回覆長度控制
AGENT_RESPONSE_LENGTH=normal

# 品質檢核設定
ENABLE_QUALITY_CHECK=true
QUALITY_THRESHOLD=0.75

# ═══════════════════════════════════════════════════════════════
# 🎯 嵌入模型設定 (向量化)
# ═══════════════════════════════════════════════════════════════

EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
LOCAL_MODEL_NAME=all-MiniLM-L6-v2
DEVICE=cpu

BATCH_SIZE=100
# Docker 容器內路徑
CHROMA_DB_PATH=/app/chroma_db
CHROMA_COLLECTION_NAME=

# ═══════════════════════════════════════════════════════════════
# 🌐 Gradio / 服務設定
# ═══════════════════════════════════════════════════════════════

# Docker 容器內監聽 0.0.0.0，port 7860
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=7860
GRADIO_SHARE=false

# ═══════════════════════════════════════════════════════════════
# 📋 日誌配置
# ═══════════════════════════════════════════════════════════════

LOG_CONSOLE_LEVEL=INFO
LOG_FILE_LEVEL=DEBUG
# Docker 容器內日誌路徑
LOG_FILE=/app/logs/resumemate.log

ENVIRONMENT=production
LOG_LEVEL=INFO
