{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Backend",
      "type": "debugpy",
      "request": "launch",
      "module": "app",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "python": "${workspaceFolder}/.venv/bin/python"
    },
    {
      "name": "Debug AI Q&A",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/backend/tools/rag.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "python": "${workspaceFolder}/.venv/bin/python"
    },
    {
      "name": "Content Admin",
      "type": "debugpy",
      "request": "launch",
      "module": "src.backend.cms.admin_app",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "INFOGRAPHICS_ADMIN_USER": "admin",
        "INFOGRAPHICS_ADMIN_PASS": "changeme"
      }
    }
  ]
}
